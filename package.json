{
  "name": "markdown-viewer-chrome-extension",
  "version": "1.0.2",
  "description": "Chrome extension that renders Markdown files beautifully in your browser",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build-icons": "sips -z 48 48 icons/icon128.png --out icons/icon48.png && sips -z 16 16 icons/icon128.png --out icons/icon16.png",
    "package": "vite build && cd dist && zip -r ../$npm_package_name-$npm_package_version.zip ."
  },
  "keywords": [
    "chrome-extension",
    "markdown",
    "viewer"
  ],
  "author": "",
  "license": "Unlicense",
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.3.0",
    "@types/chrome": "^0.1.36",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "marked-frontmatter": "^1.0.1",
    "marked-highlight": "^2.2.3",
    "marked-mermaid-flowchart": "^1.0.0",
    "marked-tree-to-html": "^1.0.3",
    "mermaid-flowchart": "^0.0.1",
    "tree-to-html": "^1.0.0"
  }
}
