{
  "manifest_version": 3,
  "name": "Markdown Viewer",
  "version": "1.0.1",
  "description": "Renders Markdown files beautifully in your browser",
  "permissions": ["contextMenus", "storage"],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*.md", "*://*/*.markdown", "file://*/*.md", "file://*/*.markdown"],
      "js": ["src/content.ts"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Markdown Viewer"
  }
}
